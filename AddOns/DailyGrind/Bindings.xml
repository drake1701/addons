<Bindings>
  <Binding name="Toggle Daily Grind" header="DAILYGRIND">
    DailyGrind:Toggle();
    DEFAULT_CHAT_FRAME:AddMessage(addonAbbr.." "..DailyGrind:GetStatus());
  </Binding>
  <Binding name="Enable Daily Grind" header="DAILYGRIND">
    DailyGrind:SetEnabled(true);
    DEFAULT_CHAT_FRAME:AddMessage(addonAbbr.." "..DailyGrind:GetStatus());
  </Binding>
  <Binding name="Disable Daily Grind" header="DAILYGRIND">
    DailyGrind:SetEnabled(false);
    DEFAULT_CHAT_FRAME:AddMessage(addonAbbr.." "..DailyGrind:GetStatus());
  </Binding>
  <Binding name="Toggle Full Repeatable Quest Automation" header="DAILYGRIND">
    DailyGrind:ToggleRepeatableQuests();
    DEFAULT_CHAT_FRAME:AddMessage(addonAbbr.." "..DailyGrind:GetRepeatableQuestsStatus());
  </Binding>
  <Binding name="Enable Full Repeatable Quest Automation" header="DAILYGRIND">
    DailyGrind:SetRepeatableQuestsEnabled(true);
    DEFAULT_CHAT_FRAME:AddMessage(addonAbbr.." "..DailyGrind:GetRepeatableQuestsStatus());
  </Binding>
  <Binding name="Disable Full Repeatable Quest Automation" header="DAILYGRIND">
    DailyGrind:SetRepeatableQuestsEnabled(false);
    DEFAULT_CHAT_FRAME:AddMessage(addonAbbr.." "..DailyGrind:GetRepeatableQuestsStatus());
  </Binding>
</Bindings>