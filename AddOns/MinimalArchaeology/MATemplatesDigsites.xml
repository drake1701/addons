<Ui xmlns="http://www.blizzard.com/wow/ui/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.blizzard.com/wow/ui/
..\FrameXML\UI.xsd">

	<!-- Kalimdor Button -->
	<Button name="MinArchKalimdorButtonTemplate" virtual="true" >
		<Size x="32" y="32"/>
		<Anchors>
			<Anchor point="TOPLEFT" x="15" y="-12"/>
		</Anchors>
		<Scripts>
			<OnClick>
				MinArch:DimADIButtons();
				self:SetAlpha(1.0);
				MinArch:CreateDigSitesList(1);
				MinArch:CreateDigSitesList(1);
			</OnClick>
			<OnEnter>
				MinArch:ADIButtonTooltip(1);
			</OnEnter>
			<OnLeave>
				GameTooltip:Hide();
			</OnLeave>
		</Scripts>
		<NormalTexture file="Interface\Icons\Achievement_Zone_Kalimdor_01.blp">
			<Size x="32" y="32"/>	
			
		</NormalTexture>
		<PushedTexture file="Interface\Icons\Achievement_Zone_Kalimdor_01.blp">
			<Size x="32" y="32"/>	
			
		</PushedTexture>
		<HighlightTexture file="Interface\Icons\Achievement_Zone_Kalimdor_01.blp" alphaMode="ADD">
			<Size x="32" y="32"/>	
			
		</HighlightTexture>
	</Button>
	
